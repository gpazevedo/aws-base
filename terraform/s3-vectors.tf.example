# =============================================================================
# S3 Vector Storage Bucket Example
# =============================================================================
# Copy this file to s3-vectors.tf and customize for your vector storage needs
#
# Usage:
#   cp terraform/s3-vectors.tf.example terraform/s3-vectors.tf
#   # Edit s3-vectors.tf to customize bucket name and settings
#   terraform apply -var-file=environments/dev.tfvars
# =============================================================================

# S3 Bucket for Vector Embeddings
resource "aws_s3_bucket" "vector_embeddings" {
  bucket = "${var.project_name}-${var.environment}-vector-embeddings"

  tags = {
    Name        = "${var.project_name}-${var.environment}-vector-embeddings"
    Environment = var.environment
    Service     = "s3vector"
  }
}

# Enable Versioning (protects against accidental deletions)
resource "aws_s3_bucket_versioning" "vector_embeddings" {
  bucket = aws_s3_bucket.vector_embeddings.id

  versioning_configuration {
    status = "Enabled"
  }
}

# Enable Encryption at Rest
resource "aws_s3_bucket_server_side_encryption_configuration" "vector_embeddings" {
  bucket = aws_s3_bucket.vector_embeddings.id

  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm = "AES256"
    }
  }
}

# Block Public Access
resource "aws_s3_bucket_public_access_block" "vector_embeddings" {
  bucket = aws_s3_bucket.vector_embeddings.id

  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

# Optional: Lifecycle Policy for Cost Optimization
resource "aws_s3_bucket_lifecycle_configuration" "vector_embeddings" {
  bucket = aws_s3_bucket.vector_embeddings.id

  # Transition old versions to cheaper storage
  rule {
    id     = "archive-old-versions"
    status = "Enabled"

    noncurrent_version_transition {
      noncurrent_days = 90
      storage_class   = "STANDARD_IA"
    }

    noncurrent_version_expiration {
      noncurrent_days = 180
    }
  }

  # Clean up incomplete multipart uploads
  rule {
    id     = "cleanup-incomplete-uploads"
    status = "Enabled"

    abort_incomplete_multipart_upload {
      days_after_initiation = 7
    }
  }
}

# =============================================================================
# Outputs
# =============================================================================

output "vector_embeddings_bucket_id" {
  description = "S3 bucket ID for vector embeddings"
  value       = aws_s3_bucket.vector_embeddings.id
}

output "vector_embeddings_bucket_arn" {
  description = "ARN of the vector embeddings bucket"
  value       = aws_s3_bucket.vector_embeddings.arn
}
